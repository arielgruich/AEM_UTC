<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aem_utc.Nuevo_horario" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese Hora :"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="aqui"
                    android:inputType="number" >

                    <requestFocus />
                </EditText>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp" >

                <TextView
                    android:id="@+id/texto"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:hint="Lunes" />

                <TextView
                    android:id="@+id/lunes"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.33" />

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lista" >

                    <Spinner
                        android:id="@+id/spiner_lunes"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.46"
                        android:background="@drawable/spiner" />

                    <ImageButton
                        android:id="@+id/ImageButton05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="37.95"
                        android:background="#0FECFF"
                        android:onClick="lunes_btn"
                        android:src="@android:drawable/arrow_down_float" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:hint="Martes" />

                <TextView
                    android:id="@+id/martes"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="18.67" />

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lista" >

                    <Spinner
                        android:id="@+id/spiner_martes"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.46"
                        android:background="@drawable/spiner" />

                    <ImageButton
                        android:id="@+id/ImageButton04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="34.44"
                        android:background="#0FECFF"
                        android:onClick="martes_btn"
                        android:src="@android:drawable/arrow_down_float" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:hint="Mircoles" />

                <TextView
                    android:id="@+id/miercoles"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="14.33" />

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lista" >

                    <Spinner
                        android:id="@+id/spiner_miercoles"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.46"
                        android:background="@drawable/spiner" />

                    <ImageButton
                        android:id="@+id/ImageButton03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="43.58"
                        android:background="#0FECFF"
                        android:onClick="miercoles_btn"
                        android:src="@android:drawable/arrow_down_float" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:hint="Jueves" />

                <TextView
                    android:id="@+id/jueves"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="14.67" />

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lista" >

                    <Spinner
                        android:id="@+id/spiner_jueves"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.46"
                        android:background="@drawable/spiner" />

                    <ImageButton
                        android:id="@+id/ImageButton02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="49.20"
                        android:background="#0FECFF"
                        android:onClick="jueves_btn"
                        android:src="@android:drawable/arrow_down_float" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:hint="Viernes" />

                <TextView
                    android:id="@+id/viernes"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.67" />

                <LinearLayout
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lista" >

                    <Spinner
                        android:id="@+id/spiner_viernes"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.46"
                        android:background="@drawable/spiner" />

                    <ImageButton
                        android:id="@+id/ImageButton01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="37.95"
                        android:background="#0FECFF"
                        android:onClick="viernes_btn"
                        android:src="@android:drawable/arrow_down_float" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="ingresar_horario"
                    android:background="@drawable/redondo"
                    android:src="@android:drawable/ic_menu_save" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.56"
                    android:onClick="buscar_horario"
                    android:background="@drawable/redondo"
                    android:src="@android:drawable/ic_menu_search" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editar_horario"
                    android:background="@drawable/redondo"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lista_horario"
                android:layout_width="match_parent"
                android:background="@drawable/lista"
                android:layout_height="match_parent" >
            </ListView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
